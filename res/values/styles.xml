<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowTitleSize">35dp</item>
        <item name="android:windowTitleBackgroundStyle">@android:color/black</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="welcomeButtonStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextoNormalStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextoNormalBoldStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextoSmallStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextoTinyStyle">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/gris</item>
    </style>

    <style name="TextoItalicStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/gris</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextoButtonStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextoLikeStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/gris</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">2dp</item>
    </style>

    <style name="FacebookLoginButton">
	    <item name="android:background">@drawable/bt_login_fb</item>
	    <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
	</style>
	
      <style name="FacebookCommentsButton">
	    <item name="android:background">@drawable/button_facebook_comments_selector</item>
	</style>
	
     <style name="FacebookButton">
	    <item name="android:background">@drawable/button_facebook_comments_selector</item>
	</style>
    
</resources>