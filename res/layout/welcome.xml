<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/foto_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/foto_2_2x" />
    
    <ImageView
        android:id="@+id/foto_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/foto_1_2x" />

    <RelativeLayout
        android:id="@+id/text_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/text_top_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/text_top_1_2x"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/text_top_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/text_top_2_2x"
            android:visibility="invisible" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/text_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/text_bottom_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/text_bottom_1_2x"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/text_bottom_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/text_bottom_2_2x"
            android:visibility="invisible"/>

    </RelativeLayout>
    
     <ImageView
        android:id="@+id/stamp_intro"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/stamp_intro_2x"
        android:visibility="gone" />
    
    <LinearLayout
        android:id="@+id/panel"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/panel_register_2x"
        android:orientation="horizontal"
        android:scaleType="fitXY" >

        <Button
            android:id="@+id/registerBtn"
            style="@style/welcomeButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/bg_register"
            android:text="@string/REGISTER"
            android:visibility="invisible" />

        <Button
            android:id="@+id/loginBtn"
            style="@style/welcomeButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/bg_login"
            android:text="@string/LOGIN"
            android:visibility="invisible" />
    </LinearLayout>
    
    <ImageView
        android:id="@+id/fleco"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/fleco_dalt_2x" />

</RelativeLayout>