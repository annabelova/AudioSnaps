<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_clear_paper_2x"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_top_bar_2x"
        android:gravity="center_vertical|center_horizontal"
        android:text=""
        android:textColor="@color/white"
        android:textSize="20sp"
        android:typeface="normal" />

    <LinearLayout
        android:id="@+id/formBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/mailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:paddingLeft="4dp"
            android:text="@string/YOUR_EMAIL" />

        <RelativeLayout
            android:id="@+id/mailBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/register_textfield_2x"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingLeft="6dp"
                android:paddingRight="6dp" >
            </EditText>
        </RelativeLayout>

        <TextView
            android:id="@+id/pwdTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="4dp"
            android:text="@string/YOUR_PASSWORD" />

        <RelativeLayout
            android:id="@+id/pwdBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/register_textfield_2x"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingLeft="6dp"
                android:paddingRight="6dp" >
            </EditText>
        </RelativeLayout>

        <Button
            android:id="@+id/nextBtn"
            style="@style/welcomeButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/bt_next"
            android:text="@string/NEXT"
            android:textAllCaps="true" />
    </LinearLayout>

</LinearLayout>