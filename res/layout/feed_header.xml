<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/negro"
    android:orientation="vertical"
    android:padding="6dp" >

    <RelativeLayout
        android:id="@+id/feedHeaderContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/negro"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgRefreshFeed"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/bt_refresh"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imgUserAvatarFeed"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/overImgUserAvatarFeed"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/over_mini_profile_pic_2x" />

        <TextView
            android:id="@+id/lblUserInfoUserNameFeed"
            style="@style/TextoLikeStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imgUserAvatarFeed"
            android:paddingRight="6dp" />

        <TextView
            android:id="@+id/lblUserInfoRelationFeed"
            style="@style/TextoItalicStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblUserInfoUserNameFeed"
            android:layout_toLeftOf="@+id/imgUserAvatarFeed"
            android:paddingRight="6dp" />
    </RelativeLayout>

</LinearLayout>